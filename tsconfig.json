{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outFile": "dist/js/index.d.ts",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules", ".vscode", "**/.*/"]
}
