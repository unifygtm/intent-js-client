{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "module": "NodeNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist/types",
    "rootDir": "./src/",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules", ".vscode", "**/.*/"]
}
